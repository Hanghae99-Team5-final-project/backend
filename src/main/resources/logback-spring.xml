<?xml version="1.0" encoding="UTF-8"?>
<!-- 30초마다 파일 변화를 체크하여 갱신시킨다. -->
<configuration debug="true" scan="true" scanPeriod="30 seconds">
<!--    <include resource="org/springframework/boot/logging/logback/base.xml"/>-->

<!--    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />-->

    <timestamp key="BY_DATE" datePattern="yyyy-MM-dd"/>
    <!-- 로그 파일 패턴 -->
    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) - %msg%n"/>
    <property name="LOG_PATH" value="/tmp/log"/>


    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>


    <appender name="FILE-INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/info-${BY_DATE}.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/backup/info/info-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <appender name="FILE-WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/warn-${BY_DATE}.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/backup/warn/warn-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <appender name="FILE-ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error-${BY_DATE}.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/backup/error/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <appender name="FILE-INFOTOERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/info_to_error-${BY_DATE}.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/backup/infotoerror/info-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
    </appender>


    <springProperty name="SLACK_WEBHOOK_URI" source="logging.slack.webhook-url"/>
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{35} - %msg%n</pattern>
        </layout>
        <webhookUri>${SLACK_WEBHOOK_URI}</webhookUri>
        <username>springwatch prod bot</username>
        <colorCoding>true</colorCoding>
    </appender>
    <appender name="ASYNC_SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SLACK"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>



    <!-- 개발환경 로깅-->
    <springProfile name="dev">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
        <!--        <include resource="file-info-appender.xml"/>-->
        <!--        <include resource="file-warn-appender.xml"/>-->
<!--        <include resource="console-appender.xml"/>-->
<!--        <include resource="file-info-to-error-appender.xml"/>-->
<!--        <include resource="file-error-appender.xml"/>-->
<!--        <include resource="slack-appender.xml"/>-->

        <root level="INFO">
            <appender-ref ref="FILE-INFOTOERROR"/>
            <appender-ref ref="FILE-ERROR"/>
            <appender-ref ref="SLACK"/>
            <appender-ref ref="ASYNC_SLACK"/>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- 운영환경 로깅-->
    <springProfile name="prod">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
<!--        <logger name="org.springframework.*" level="info" />-->
<!--        <include resource="org/springframework/boot/logging/logback/base.xml"/>-->
        <!--        <include resource="file-info-appender.xml"/>-->
        <!--        <include resource="file-warn-appender.xml"/>-->


<!--        <include file="src/main/java/resources/console-appender.xml"/>-->
<!--        <include file="src/main/java/resources/file-info-to-error-appender.xml"/>-->
<!--        <include file="src/main/java/resources/file-error-appender.xml"/>-->
<!--        <include file="src/main/java/resources/slack-appender.xml"/>-->

<!--        <include resource="console-appender.xml"/>-->
<!--        <include resource="file-info-to-error-appender.xml"/>-->
<!--        <include resource="file-error-appender.xml"/>-->
<!--        <include resource="slack-appender.xml"/>-->

        <root level="INFO">
            <appender-ref ref="FILE-INFOTOERROR"/>
            <appender-ref ref="FILE-ERROR"/>
            <appender-ref ref="SLACK"/>
            <appender-ref ref="ASYNC_SLACK"/>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
